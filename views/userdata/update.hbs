
<center><h3>{{viewTitle}}</h3></center>
<form action ="/user" method="POST" autocomplete="off">
      <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="name" placeholder="Full Name" value="{{user.name}}">
        <div class="text-danger">
            {{user.NameError}}
        </div>
       
    </div> 
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email"value="{{user.email}}" >
        <div class="text-danger">
            {{user.emailError}}
        </div>
    
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="Integer" class="form-control" name="mobile" placeholder="Mobile" value="{{user.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City"value="{{user.city}}">
        </div>
        
    </div>
 
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Update</button>
      
    </div>
</form>